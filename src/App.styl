table
  margin: auto
  width: 95vw
  border: 2px solid green
  border-collapse: collapse
  color: green
  margin-bottom: 2vh
  td, th
    border: 1px solid green
  td:nth-child(2)
    height: 10vh
    width: 10vh
  th
    &:hover
      cursor: pointer
    color: darkblue
    background: grey
h1
  text-align: center
  color: red
  font-size: 10vh
.pagContainer
  display: flex
  justify-content: space-around
  .Pagination
  .activePagination
    cursor: pointer
    width: 5vw
    height: 5vw
    color: black
    font-size: 4vw
    border: 2px solid green
    background: cyan
  .activePagination
    background: red
img
  display: block
  width: 100%
  height: 100%
.Invisible
  display: none
.loader
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  display: flex
  justify-content: space-around
  align-items: center
  font-size: 7vh
  font-weight: bold
  color: green
  background: black
  .loading1
    width: 5vh
    height: 5vh
    background: green
    border-radius: 100%
    animation: dots 1s infinite 
    animation-timing-function: linear
  .loading2
    width: 5vh
    height: 5vh
    background: green
    border-radius: 100%
    animation: dots 1s infinite 
    animation-delay 0.2s
    animation-timing-function: linear
  .loading3 
    width: 5vh
    height: 5vh
    background: green
    border-radius: 100%
    animation: dots 1s infinite 
    animation-delay 0.4s
    animation-timing-function: linear
@keyframes dots
  0% 
    transform scale(1)
  50% 
    transform scale(0)
  100% 
    transform scale(1)
